            <!-- TRASCRIZIONE -->
            <body>
                <div type="fronte">
                    <div type="stamp">
                        <ab>
                            <stamp xml:lang="#GE" type="print" facs="#kriegsg_33A">Kriegsgenfangenenpost</stamp>
                            <stamp xml:lang="#IT" type="print" facs="#corr_33A">Corrispondenza dei prigionieri di guerra</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#postkarte_33A" rend="Bold">Postkarte</stamp>
                            <stamp xml:lang="#IT" type="print" facs="#cart_33A">Cartolina postale</stamp>
                        </ab>
                    </div>
                    <div type="francobolli_e_timbri">
                        <ab>
                            <stamp facs="#timbro1_33A" type="postmark">
                                <mentioned>scritture illeggibili dentro al timbro</mentioned>
                                <date when="1944-07-27">27.7.44</date>
                                <add>Nord</add>
                            </stamp>
                            <stamp facs="#timbro2_33A" type="postmark">
                                <mentioned>timbro del campo con bordi viola "Stalag IIIA 28 geprüft", quasi totalmente illeggibile</mentioned>
                            </stamp>
                            <stamp facs="#timbro3_33A" type="postmark">
                                <mentioned>"U.S ARMY P/W EXAMINER", ben leggibile in parte</mentioned>
                            </stamp>
                        </ab>
                    </div>
                    <div type="destinatario">
                        <ab>
                            <stamp xml:lang="#GE" type="print" rend="Bold" facs="#gebuh_33A">Gebührenfrei!</stamp>
                            <stamp xml:lang="#IT" type="print" facs="#franco_33A">Franco di porto!</stamp>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_nome1_33A">An</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#label_nome2_33A">A</stamp>
                                    <persName ref="#AnP" facs="#nome_33A"><addName type="honorific">Signor</addName>Pacini Angelo</persName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_localita1_33A">Empangsort:</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#label_localita2_33A">Località di destinazione</stamp>
                                    <placeName ref="#NU" facs="#localita_33A">Nugola</placeName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_via1_33A">Straße:</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#label_via2_33A">Via</stamp>
                                    <placeName ref="#NU" facs="#via_33A">Nugola</placeName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_provincia1_33A">Landesteil (Provinc usw.)</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#label_provincia2_33A">Provincia</stamp>
                                    <placeName ref="#LI" facs="#provincia_33A">Livorno</placeName> 
                                    <placeName ref="#TO" facs="#regione_33A">(Toscana)</placeName>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                    <div type="mittente">
                        <ab>
                            <stamp rend="Bold" xml:lang="#GE" type="print" facs="#mit_absender_33A">Absender:</stamp>
                            <stamp xml:lang="#IT" type="print" facs="#mit_mittente_33A">Mittente:</stamp>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_nome1_33A">Vor-und Zuname:</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#mit_label_nome2_33A">Nome e cognome</stamp>
                                    <persName ref="#AlP" facs="#mit_nome_33A">Pacini Alberto</persName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_num1_33A">Gefangenennummer:</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#mit_label_num2_33A">Numero del prigioniero</stamp>
                                    <idno type="prigioniero" facs="#mit_num_33A">158767</idno>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_campo1_33A">Lager-Bezeichnung:</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#mit_label_campo2_33A">Designazione del campo</stamp>
                                    <stamp type="print" facs="#mit_campo1_33A"><placeName ref="#LU">M.-Stammlager III A</placeName></stamp>
                                    <seg facs="#mit_add_33A" hand="#AlP"><idno type="reparto">782c</idno></seg>
                                </addrLine>
                                <addrLine>
                                    <stamp type="print" facs="#mit_stato_33A"><placeName ref="#GE">Deutschland (Germania)</placeName></stamp>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                </div>
                <div type="retro">
                    <div type="intestazione">
                        <ab>
                            <stamp xml:lang="#GE" type="print" facs="#stamp1_33B">Kriegsgenlangenenlager</stamp>
                            <stamp xml:lang="#IT" type="print" facs="#stamp2_33B">Campo dei prigionieri di guerra</stamp>
                            <stamp type="print" facs="#stamp3_33B">M.-Stammlager III A</stamp>
                        </ab>
                    </div>
                    <div type="message">
                        <lb n="1"/>
                        <opener>
                            <dateline>
                                <stamp xml:lang="#GE" type="print" facs="#label_data1_33B">Datum:</stamp><date when="1944-07-14" facs="#data_33B">14/7/44</date>
                                <stamp xml:lang="#IT" type="print" facs="#label_data2_33B">Data</stamp>
                            </dateline>
                            <lb n="2"/>
                            <salute facs="#salute_33B">Genitori adorati.</salute>
                        </opener>
                        <ab>
                            <anchor facs="#iniziomessaggio_33B" type="start_message"/><date when="1944-07-13">Ieri 13</date>ho passata una nuova visita e sono
                            <lb facs="#riga2_33B" n="3"/>stato rinviato per una nuova visita a <date when="1944-07-20">giovedì prossimo 20</date>.
                            <lb facs="#riga3_33B" n="4"/>Io sto benissimo quà e sono contento che questa pic-
                            <lb facs="#riga4_33B" n="5"/>cola ferita al piede tardi a guarire. Da voi attendo
                            <lb facs="#riga5_33B" n="6"/>posta (l'ultima vostra è del <date when="1944-04-24">24/4</date>). State contenti
                            <lb facs="#riga6_33B" n="7"/>che presto il Signore ci farà la grazia di farci riu-
                            <lb facs="#riga7_33B" n="8"/>nire. Tanti affettuosi baci e abbracci a tutti.
                            <lb facs="#riga8_33B" n="9"/>Oggi ho ricevuto una cartolina di <persName ref="#LM">Liana</persName> e una lettera vostra.
                        </ab>
                        <closer>
                            <signed facs="#signed_33B"><choice><abbr>aff.mo</abbr><expan>affettuosissimo</expan></choice> figlio <choice><abbr rend="underline">Berto</abbr><expan><persName ref="#AlP">Alberto</persName></expan></choice></signed>
                        </closer>
                    </div>
                </div>
            </body>
