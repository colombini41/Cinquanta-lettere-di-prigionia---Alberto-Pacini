            <!-- TRASCRIZIONE -->
            <body>
                <div type="fronte">
                    <div type="stamp">
                            <ab>
                                <stamp xml:lang="#IT" type="print" facs="#stamp1_12A">POSTA per PRIGIONIERI e INTERNATI CIVILI di GUERRA</stamp>
                            </ab>
                    </div>
                    <div type="francobolli_e_timbri">
                        <ab>
                            <stamp facs="#timbro1_12A" type="postmark">
                                <mentioned>SELVATELLE PISA</mentioned>
                                <date when="1944-03-20">20.3.44</date>
                            </stamp>
                            <stamp facs="#timbro2_12A" type="postmark">
                                <mentioned>MODULO NON AMMESSO</mentioned>
                                <mentioned>AL MITTENTE</mentioned>
                            </stamp>
                            <stamp facs="#timbro3_12A" type="postmark">
                                <mentioned>23</mentioned>
                            </stamp>
                            <stamp type="postmark">
                                <mentioned facs="#men1_timbro4_12A">COMMISSIONE P</mentioned><mentioned facs="#men2_timbro4_12A">ROV. DI CENSURA 67-R</mentioned>
                                <mentioned facs="#men3_timbro4_12A">PRELEVATA PER CENSURA IL </mentioned><mentioned facs="#men4_timbro4_12A"><date when="1944-03-28">21.MAR.44XXII</date></mentioned>
                                <mentioned facs="#men5_timbro4_12A">RESTITITUITA ALLE RR. PP. IL </mentioned><mentioned facs="#men6_timbro4_12A"><date when="1944-03-28">21.MAR.44XXII</date></mentioned>
                            </stamp>
                        </ab>
                    </div>
                    <div type="destinatario">
                        <ab>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#IT" type="print" facs="#label_nome_12A">Al</stamp><persName ref="#AlP" facs="#nome_12A">Pacini Alberto di Angelo</persName>
                                    <stamp xml:lang="#IT" type="print" facs="#grado_12A">Grado del destinatario</stamp>
                                </addrLine>
                                <addrLine>
                                    <seg facs="#add1_12A">Siehe Rucheite vou au dos</seg>
                                    <stamp xml:lang="#IT" type="print" facs="#label_cognome_12A">Cognome, Nome, Paternità del destinatario</stamp>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#IT" type="print" facs="#label_num_12A">Matricola N.</stamp><idno type="prigioniero" facs="#num_12A">158767</idno><seg facs="#add2_12A">Prigioniero di Guerra</seg>
                                    <stamp xml:lang="#IT" type="print" facs="#label_classificazione_12A">di seguito scrivere: "PRIGIONIERO DI GUERRA" oppure "INTERNATO CIVILE"</stamp>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#IT" type="print" facs="#label_campo1_12A">Campo N.</stamp><placeName ref="#LU" facs="#campo_12A">782 Selterhot c-1 M. Stammlager IIIA </placeName>
                                    <stamp xml:lang="#IT" type="print" facs="#label_campo2_12A">Riportare tutte le indicazioni relative al numero e nome del campo, sezione del campo, ecc. secondo le indicazioni fornite dal prigioniero di guerra o internato civile.</stamp>
                                </addrLine>
                                <addrLine>
                                    <placeName ref="#GE" facs="#stato_12A">Deutschland/Allegmagne</placeName>
                                    <stamp xml:lang="#IT" type="print" facs="#label_stato_12A">Stato o Paese di destinazione</stamp>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                    <div type="mittente">
                        <ab>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#IT" type="print" facs="#mit_mittente_12A">Mittente:</stamp><persName ref="#LM" facs="#mit_nomecognome_12A">Liana Pacini Martini</persName>
                                    <stamp type="print" facs="#mit_label_nomecognome_12A">cognome e nome</stamp>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#IT" type="print" facs="#mit_label_via1_12A">Indirizzo</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#mit_label_via2_12A">via</stamp>
                                    <placeName ref="#VO" facs="#mit_via_12A">Volterrana</placeName>
                                </addrLine>
                                <addrLine>
                                    <placeName ref="#PI" facs="#mit_provincia_12A">Pisa</placeName><stamp xml:lang="#IT" facs="#mit_label_provincia_12A">(Provincia)</stamp>
                                </addrLine>
                                <addrLine>
                                    <placeName ref="#IT" facs="#mit_stato_12A">Italia</placeName>
                                </addrLine>
                                <addrLine>
                                    <placeName ref="#SE" facs="#mit_localita_12A">Selvatelle</placeName><stamp xml:lang="#IT" facs="#mit_label_localita_12A">Paese o città di residenza)</stamp>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                </div>
                <div type="retro">
                    <div type="intestazione">
                        <ab>
                            <stamp xml:lang="#IT" type="print" facs="#stamp1_12B">Se volete che la corrispondenza arrivi a destinazione scrivete chiaro e con caratteri non troppo piccoli - È consentito scrivere sulle righe e non fra le righe</stamp>
                        </ab>
                    </div>
                    <div type="messaggio">
                        <lb n="1"/>
                        <opener>
                            <dateline>
                                <placeName ref="#SE" facs="#luogo_12B">Selvatelle</placeName><date facs="#data_12B" when="1944-03-19">19-3-1944</date>
                            </dateline>
                            <lb n="2"/>
                            <salute facs="#salute_12B">Carissimo <persName ref="#AlP">Alberto</persName> mio</salute>
                        </opener>
                        <ab>
                            <lb facs="#riga1_12B" n="3"/>sperando che queste mie righe, non siano scritte
                            <lb facs="#riga2_12B" n="4"/>invano, ti scrivo perchè tu ricevendoli sia conten-
                            <lb facs="#riga3_12B" n="5"/>to di sapere che sto bene io, come pure i familiari
                            <lb facs="#riga4_12B" n="6"/>tutti. Stai contento per noi, siamo in campa-
                            <lb facs="#riga5_12B" n="7"/>gna qua tutto è calmo non c'e nessun pericolo, non
                            <lb facs="#riga6_12B" n="8"/>ci manca niente, sola nostra grande pena è l'ave-
                            <lb facs="#riga7_12B" n="9"/>re tu, nostro bene infinito così lontanto ed, avere
                            <lb facs="#riga8_12B" n="10"/>così rade tue notizie. Maritino mio, perchè tu lo
                            <lb facs="#riga9_12B" n="11"/>desideri e per fare contenti i tuoi, questa settimana
                            <lb facs="#riga10_12B" n="12"/>sono stata due giorni là da loro, a <placeName ref="Nugola">Nugola</placeName> puoi im-
                            <lb facs="#riga11_12B" n="13"/>maginare come sia stata contenta ci ho trovato la
                            <lb facs="#riga12_12B" n="14"/>tua cartolina scritta ultima in data <date when="1944-03-02">3-2-44</date>trovandomi
                            <lb facs="#riga13_12B" n="15"/>li ho potuto scrivere sulla risposta che forse ti arriva
                            <lb facs="#riga14_12B" n="16"/>prima di questa mia. Poi credi, i tuoi genitori sono
                            <lb facs="#riga15_12B" n="17"/>adorabili, mi colmano anche delle più piccole
                            <lb facs="#riga16_12B" n="18"/>attenzioni, proprio con loro mi sembra d'essere
                            <lb facs="#riga17_12B" n="19"/>vicina a te perchè in tutto ti somigliano e sanno
                            <lb facs="#riga18_12B" n="20"/>farsi tanto amare. Amore mi dispiace di vedere
                            <lb facs="#riga19_12B" n="21"/>che ancora non avevi ricevuto nostre notizie
                            <lb facs="#riga20_12B" n="22"/>e mi immagino quanto tu sia stato male
                            <lb facs="#riga21_12B" n="23"/>tanti lunghi mesi senza sapere niente della tua mogliet
                            <lb facs="#riga22_12B" n="24"/>tina e dei tuoi genitori. Amore noi ti scriviamo
                            <lb facs="#riga23_12B" n="25"/>molto spesso perchè tu sia contento di ricevere
                            <lb facs="#riga24_12B" n="26"/>tanta posta ma se tutta non ti arrivasse non sta-
                            <lb facs="#riga25_12B" n="27"/>re male, sappi sempre che il nostro unico scopo nella
                        </ab>
                    </div>
                </div>
                <div type="fronte">
                    <div type="messaggio">
                        <ab>
                            <stamp xml:lang="#IT" type="print" facs="#stamp2_12A">Spazio supplementare riservato alla corrispondenza</stamp>
                        </ab>
                        <ab>
                            <lb facs="#riga1_12A" n="28"/>vita sei tu, quindi è inutile stare a dirti che non abbia-
                            <lb facs="#riga2_12A" n="29"/>mo altro pensiero, che noi facciamo quanto ci
                            <lb facs="#riga3_12A" n="30"/>è possibile per te, tu lo sai, vorremmo fare tanto
                            <lb facs="#riga4_12A" n="31"/>ma ci limitiamo a scrivere come fai tu. Tu sai tutto
                            <lb facs="#riga5_12A" n="32"/>però di noi e noi invece vorremmo poter sapere tante
                            <lb facs="#riga6_12A" n="33"/>cose di te. Amore fai sempre tutto il meglio possibile
                            <lb facs="#riga7_12A" n="34"/>stai contento non te la prendere la Madonnina ti pro-
                            <lb facs="#riga8_12A" n="35"/>tegge perchè noi tutti la preghiamo tanto. Ricevi tanti cari baci
                            <lb facs="#riga9_12A" n="36"/>da tutti.
                        </ab>
                        <closer>
                            <signed facs="#signed_12A">Tua per sempre Liana</signed>
                        </closer>
                    </div>
                </div>
            </body>
        </text>
