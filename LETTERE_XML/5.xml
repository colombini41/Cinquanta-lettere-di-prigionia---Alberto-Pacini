                            <stamp xml:lang="#GE" type="print" facs="#unbesetzes_05A" rend="Bold">Unbesetztes Gebiet</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#terrnonocc_05A" rend="Bold">Territoire non occupé</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#nichtz_05A" rend="Bold">Nichtzutreffendes streichen</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#biffer_05A" rend="Bold">Biffer les mentions inutiles</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#kriegs_05A">Kriegsgenfangenenpost</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#corr_05A">Correspondance des prisonniers de guerre</stamp>
