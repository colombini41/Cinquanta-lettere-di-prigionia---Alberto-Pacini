                                    <persName ref="#AlP" facs="#mit_nome_39A">Pacini Alberto</persName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_num1_39A">Gefangenennummer:</stamp>
