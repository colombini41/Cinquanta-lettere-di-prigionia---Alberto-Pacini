            <body>
                <div type="fronte">
                    <div type="stamp">
                        <ab>
                            <stamp xml:lang="#GE" type="print" rend="bold underline" facs="#kriegsg_39A">Kriegsgenfangenenpost</stamp>
                            <stamp xml:lang="#IT" type="print" facs="#corr_39A">Corrispondenza dei prigionieri di guerra</stamp>
                        </ab>
                    </div>
                    <div type="francobolli_e_timbri">
                        <ab>
                            <stamp facs="#timbro1_39A" type="postmark">
                                <mentioned>timbro del campo con bordi viola "Stalag IIIA 20 geprüft", quasi del tutto illeggibile</mentioned>
                            </stamp>
                            <stamp facs="#timbro2_39A" type="postmark">
                                <mentioned>U.S ARMY P/W EXAMINER</mentioned>
                                <seg rend="underline grey" facs="#seg_39A">Italia Sud</seg>
                            </stamp>
                        </ab>
                    </div>
                    <div type="destinatario">
                        <ab>
                            <stamp xml:lang="#IT" type="print" rend="bold" facs="#italiasett_39A">Italia Settentrionale</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#nordita_39A">Norditalien</stamp>
                            <stamp xml:lang="#IT" type="print" rend="bold" facs="#italiamer_39A">Italia Meridionale</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#sudita_39A">Suditalien</stamp>
                            <stamp xml:lang="#IT" type="print" facs="#canc_39A">Cancellare parole non riguardanti</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#nichtz_39A">Nichtzutreffendes streichen</stamp>
                            <stamp xml:lang="#GE" type="print" rend="bold underline" facs="#gebuh_39A">Gebührenfrei!</stamp>
                            <stamp xml:lang="#IT" type="print" facs="#franco_39A">Franco di porto!</stamp>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_nome1_39A">An</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#label_nome2_39A">A</stamp>
                                    <persName ref="#AnP" facs="#nome_39A"><addName type="honorific">Signor</addName>Pacini Angiolo</persName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_localita1_39A">Empfangsort:</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#label_localita2_39A">Località di destinazione</stamp>
                                    <placeName ref="#NU" facs="#localita_39A">Nugola</placeName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_via1_39A">Straße:</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#label_via2_39A">Via</stamp>
                                    <placeName ref="#NU" facs="#via_39A">Nugola</placeName>
                                </addrLine>
