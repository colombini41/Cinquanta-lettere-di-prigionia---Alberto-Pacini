        <text type="lettera" xml:id="lettera_18">
            <!-- TRASCRIZIONE -->
            <body>
                <div type="fronte">
                    <div type="stamp">
                        <ab>
                            <stamp xml:lang="#GE" type="print" facs="#kriegsg_18A">Kriegsgenfangenenpost</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#corr_18A">Correspondance des prisonniers de guerre</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#postkarte_18A" rend="Bold">Antwort-Postkarte</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#cart_18A">Carte postale de réponse</stamp>
                        </ab>
                    </div>
                    <div type="francobolli_e_timbri">
                        <ab>
                            <stamp facs="#timbro1_18A" type="postmark">
                                <mentioned>SELVATELLE PISA</mentioned>
                                <date when="1944-04-22">22.4.44</date>
                            </stamp>
                            <stamp facs="#timbro2_18A" type="postmark">
                                <mentioned>timbro del campo con bordi viola "Stalag IIIA 40 geprüft", ben leggibile</mentioned>
                            </stamp>
                            <stamp facs="#timbro3_18A" type="postmark">
                                <mentioned>timbro nero con numero 33 all'interno, leggibile</mentioned>
                            </stamp>
                            <stamp facs="#timbro4_18A" type="postmark">
                                <mentioned>... PROVA DI CENSURA 67-R</mentioned>
                                <mentioned>illeggibile la part sinistra del timbro</mentioned>
                                <mentioned>RESTITITUITA ALLE RR. PP. IL <date when="1944-04-25">25.4.44XXII</date></mentioned>
                            </stamp>
                        </ab>
                    </div>
                    <div type="destinatario">
                        <ab>
                            <stamp xml:lang="#GE" type="print" rend="Bold" facs="#gebuh_18A">Gebührenfrei!</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#franc_18A">Franc de port!</stamp>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_nome1_18A">An den Kriegsgefangenen</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#label_nome2_18A">Au prisonnier</stamp>
                                    <persName ref="#AlP" facs="#nome_18A">Pacini Alberto</persName>
                                    <add>
                                        <date when="1944-07-16" facs="#dataricezione_18A">16/7</date>
                                        <note>Data di ricezione apposta dal destinatario</note>
                                    </add>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_num1_18A">Gefangenennummer:</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#label_num2_18A">No. du prisonnier</stamp>
                                    <idno type="prigioniero" facs="#num_18A">158767</idno>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_campo1_18A">Leger-Bezeichnung</stamp><seg hand="#AnP" facs="#campo1_18A">Selterhof<idno type="settore">782c</idno></seg>
                                    <stamp xml:lang="#FR" type="print" facs="#label_campo2_18A">Nom du camp</stamp>
                                    <stamp type="print" facs="#campo2_18A"><placeName ref="#LU">M.-Stammlager III A </placeName></stamp>
                                </addrLine>
                                <addrLine>
                                    <placeName ref="#GE" facs="#stato_18A">Deutschland (Allemagne)</placeName>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                    <div type="mittente">
                        <ab>
                            <stamp rend="Bold" xml:lang="#GE" type="print" facs="#mit_absender_18A">Absender:</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#mit_expediteur_18A">Expèditeur:</stamp>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_nome1_18A">Vor-und Zuname:</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_nome2_18A">Nom et prénom:</stamp>
                                    <persName ref="#LM" facs="#mit_nome_18A">Martini Liana</persName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_localita1_18A">Ort:</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_localita2_18A">Lieu</stamp>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_via1_18A">Straße:</stamp>
                                    <placeName ref="#SE" facs="#mit_via_18A">Selvatelle</placeName>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_via2_18A">Rue</stamp>
                                </addrLine>
                                <addrLine>
                                    <stamp rend="Bold" xml:lang="#GE" type="print" facs="#mit_label_citta1_18A">Kreis:</stamp>
                                    <placeName ref="#PI" facs="#mit_citta_18A">Pisa</placeName>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_citta2_18A">Département</stamp>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                </div>
                <div type="retro">
                    <div type="intestazione">
                        <ab>
                            <stamp xml:lang="#GE" type="print" facs="#stamp1_18B">Hier abtrennen!</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#stamp2_18B">Détacher le long du pointillé!</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#stamp3_18B">diese Seite is fut die Angehörigen des Kriegsgenfangenen bestimmt. Detulich auf die Zeilen schreiben!</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#stamp4_18B">Ce côté est réservé aux proches parents du prissonier de guerre! N'écrite que sur les lignes et lisiblmente!</stamp>
                        </ab>
                    </div>
                    <div type="messaggio">
                        <lb n="1"/>
                        <opener>
                            <dateline>
                                <date when="1944-04-20" facs="#data_18B">20-4-44</date>
                            </dateline>
                            <lb n="2"/>
                            <salute facs="#salute_18B">Carissimo <persName ref="#AlP">Alberto</persName> mio</salute>
                        </opener>
                        <ab>
                            <anchor facs="#iniziomessaggio_18B" type="start_message"/>con grande gioia ho ricevuto tue nuove dove
                            <lb facs="#riga2_18B" n="3"/>vedo che stai bene. Io i tuoi e i miei familiari tutti stiamo benissimo
                            <lb facs="#riga3_18B" n="4"/>spero che avrai ricevuto nostre notizie e saprai che noi viviamo tutti
                            <lb facs="#riga4_18B" n="5"/>ancora in campagna, ci siamo sistemati abbastanza bene e ci stiamo
                            <lb facs="#riga5_18B" n="6"/>volentieri. <persName ref="#AlP">Alberto</persName> caro, io e i tuoi viviamo facendosi coraggio tra noi,
                            <lb facs="#riga6_18B" n="7"/>ci vediamo spesso, preghiamo tanto per te, perchè tu possa ritornare pres-
                            <lb facs="#riga7_18B" n="8"/>to tra le nostre braccia. Stai contento ti scrivo per tutti ti abbraccio e ti bacio
                        </ab>
                        <lb n="9"/>
                        <closer>
                            <signed facs="#signed_18B">tua <persName ref="#LM">Liana</persName></signed>
                        </closer>
                    </div>
                    <div type="francobolli_e_timbri">
                        <ab>
                            <stamp facs="#timbro_18B" type="postmark">
                                <mentioned>timbro viola con numero 33 all'interno, poco leggibile</mentioned>
                            </stamp>
                        </ab>
                    </div>
                </div>
            </body>
        </text>
