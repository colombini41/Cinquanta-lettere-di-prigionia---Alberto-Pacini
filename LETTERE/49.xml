                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_nome1_49A1">An den Kriegsgefangenen</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#label_nome2_49A1">Al prigioniero di guerra</stamp>
                                    <persName ref="#AlP" facs="#nome_49A1">Pacini Alberto</persName>
                                </addrLine>
