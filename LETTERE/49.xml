                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_via1_49A2">Straße:</stamp>
                                    <stamp xml:lang="#IT" type="print" facs="#mit_label_via3_49A2">Via</stamp>
                                    <placeName ref="#vR" facs="#mit_via_49A2">Via Roma N88</placeName>
