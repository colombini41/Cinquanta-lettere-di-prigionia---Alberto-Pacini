        <text type="lettera" xml:id="lettera_21">
            <!-- TRASCRIZIONE -->
            <body>
                <div type="fronte">
                    <div type="stamp">
                        <ab>
                            <stamp xml:lang="#GE" type="print" facs="#kriegsg_21A">Kriegsgenfangenenpost</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#corr_21A">Correspondance des prisonniers de guerre</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#antwort_21A" rend="Bold">Antwort-Postkarte</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#carte_21A">Carte postale de réponse</stamp>
                        </ab>
                    </div>
                    <div type="francobolli_e_timbri">
                        <ab>
                            <stamp facs="#timbro1_21A" type="postmark">
                                <mentioned>NUGOLA LIVORNO</mentioned>
                                <date when="1944-04-24">24.4.44</date>
                            </stamp>
                            <stamp facs="#timbro2_21A" type="postmark">
                                <mentioned>timbro del campo con bordi viola "Stalag IIIA 19 geprüft", non totalmente leggibile</mentioned>
                            </stamp>
                        </ab>
                    </div>
                    <div type="destinatario">
                        <ab>
                            <stamp xml:lang="#GE" type="print" rend="Bold" facs="#gebuh_21A">Gebührenfrei!</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#franc_21A">Franc de port!</stamp>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_nome1_21A">An den Kriegsgefangenen</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#label_nome2_21A">Au prisonnier</stamp>
                                    <add>
                                        <date when="1944-07-07" rend="pink" facs="#dataricezione_21A">7/7</date>
                                        <note>Data di ricezione lettera aggiunta dal destinatario al momento della ricezione</note>
                                    </add>
                                    <persName ref="#AlP" facs="#nome_21A">Pacini Alberto</persName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_num1_21A">Gefangenennummer:</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#label_num2_21A">No. du prisonnier</stamp>
                                    <idno type="prigioniero" facs="#num_21A">158767</idno>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_campo1_21A">Leger-Bezeichnung</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#label_campo2_21A">Nom du camp</stamp>
                                    <stamp type="print" facs="#campo_21A"><placeName ref="#LU">M.-Stammlager III A </placeName></stamp>
                                </addrLine>
                                <addrLine>
                                    <add>
                                        <del rend="overstrike purple" facs="#del_21A">Selterhof<idno type="settore">782 c</idno></del>
                                        <add facs="#seg_21A">
                                            <hi xml:lang="#GE">gepruft</hi>
                                            <note>"Controllato" nota aggiunta dall'addetto al controllo postale</note>
                                        </add>
                                    </add>
                                </addrLine>
                                <addrLine>
                                    <placeName ref="#GE" facs="#stato_21A">Deutschland (Allemagne)</placeName>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                    <div type="mittente">
                        <ab>
                            <stamp rend="Bold" xml:lang="#GE" type="print" facs="#mit_absender_21A">Absender:</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#mit_expediteur_21A">Expèditeur:</stamp>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_nome1_21A">Vor-und Zuname:</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_nome2_21A">Nom et prénom:</stamp>
                                    <persName ref="#AnP" facs="#mit_nome_21A">Pacini Angiolo</persName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_localita1_21A">Ort:</stamp>
                                    <placeName ref="#NU" facs="#mit_localita_21A">Nugola</placeName>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_localita2_21A">Lieu</stamp>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_via1_21A">Straße:</stamp>
                                    <placeName ref="#LI" facs="#mit_citta_21A">Livorno</placeName>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_via2_21A">Rue</stamp>
                                </addrLine>
                                <addrLine>
                                    <stamp rend="Bold" xml:lang="#GE" type="print" facs="#mit_label_provincia1_21A">Kreis:</stamp>
                                    <placeName ref="IT" facs="#mit_stato_21A">Italia</placeName>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_provincia2_21A">Département</stamp>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                </div>
                <div type="retro">
                    <div type="intestazione">
                        <ab>
                            <stamp xml:lang="#GE" type="print" facs="#stamp1_21B">Hier abtrennen!</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#stamp2_21B">Détacher le long du pointillé!</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#stamp3_21B">diese Seite is fut die Angehörigen des Kriegsgenfangenen bestimmt. Detulich auf die Zeilen schreiben!</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#stamp4_21B">Ce côté est réservé aux proches parents du prissonier de guerre! N'écrite que sur les lignes et lisiblmente!</stamp>
                        </ab>
                    </div>
                    <div type="messaggio">
                        <lb n="1"/>
                        <opener>
                            <dateline>
                                <placeName ref="Nugola" facs="#luogo_21B">Nugola </placeName><date when="1944-04-23" facs="#data_21B">23.4.944</date>
                            </dateline>
                            <lb n="2"/>
                            <salute facs="#salute_21B">Figlio caro</salute>
                        </opener>
                        <ab>
                            <anchor facs="#iniziomessaggio_21B" type="start_message"/>abbiamo ricevuto in data <date when="1944-02-28">28.2.9<corr>4</corr></date>
                            <lb facs="#riga2_21B" n="3"/>Sentiamo che tu non ai ancora avuto nostre notizie
                            <lb facs="#riga3_21B" n="4"/>che tu lontano e non sapere nulla dei tuoi cari
                            <lb facs="#riga4_21B" n="5"/>ti assicuro che noi tutti stiamo bene pensiamo
                            <lb facs="#riga5_21B" n="6"/>tutti a te e che presto tu possa ritornare nelle
                            <lb facs="#riga6_21B" n="7"/>braccia di tutti i cari ti baciamo e ti
                            <lb facs="#riga7_21B" n="8"/>abbracciamo
                        </ab>
                        <lb n="9"/>
                        <closer>
                            <signed facs="#signed_21B">
                                tuo <persName ref="#AnP">babbo</persName> <persName ref="#AE">mamma</persName> <persName ref="#LM">Liana</persName> <persName ref="#MC">Maria</persName>
                                <lb n="10"/><persName ref="#FC">Franchina</persName> <persName ref="#BC">Beppino</persName> e tutti
                            </signed>
                        </closer>
                    </div>
                </div>
            </body>
        </text>
