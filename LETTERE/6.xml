        <text type="lettera" xml:id="lettera_6">
            <!-- TRASCRIZIONE -->
            <body>
                <div type="fronte">
                    <div type="stamp">
                        <ab>
                            <stamp xml:lang="#GE" type="print" facs="#kriegsg_06A">Kriegsgenfangenenpost</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#corr_06A">Correspondance des prisonniers de guerre</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#antwort_06A" rend="Bold">Antwort-Postkarte</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#carte_06A">Carte postale de réponse</stamp>
                        </ab>
                    </div>
                    <div type="francobolli_e_timbri">
                        <ab>
                            <stamp facs="#timbro1_06A" type="postmark">
                                <mentioned>NUGOLA LIVORNO</mentioned>
                                <date when="1944-02-07">7.2.44</date>
                            </stamp>
                            <stamp facs="#timbro2_06A" type="postmark">
                                <mentioned>timbro del campo con bordi viola "Stalag IIIA 28 geprüft", quasi del tutto illeggibile</mentioned>
                            </stamp>
                            <stamp facs="#timbro3_06A" type="postmark">
                                <mentioned>timbro viola con numero 40 all'interno</mentioned>
                            </stamp>
                            <stamp facs="#timbro4_06A" type="postmark">
                                <mentioned>timbro tondo con bordi viola, con scritte illeggibili</mentioned>
                            </stamp>
                        </ab>
                    </div>
                    <div type="destinatario">
                        <ab>
                            <stamp xml:lang="#GE" type="print" rend="Bold" facs="#gebuh_06A">Gebührenfrei!</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#franco_06A">Franc de port!</stamp>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_nome1_06A">An den Kriegsgefangenen</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#label_nome2_06A">Au prisonnier</stamp>
                                    <persName ref="#AlP" facs="#nome_06A">Pacini Alberto</persName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_num1_06A">Gefangenennummer:</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#label_num2_06A">No. du prisonnier</stamp>
                                    <idno type="prigioniero" facs="#numero_06A">158767</idno>
                                    <add hand="#AlP" facs="#dataricezione_06A">
                                        <date when="1944-03-25">25/3/44</date>
                                        <note>Data di ricezione apposta dal destinatario</note>
                                    </add>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#label_campo1_06A">Leger-Bezeichnung</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#label_campo2_06A">Nom du camp</stamp>
                                    <stamp type="print" facs="#campo_06A"><placeName ref="#LU">M.-Stammlager III A </placeName></stamp>
                                    <seg facs="#seg_06B" hand="#AnP"><idno type="reparto">782c</idno></seg>
                                </addrLine>
                                <addrLine>
                                    <placeName ref="#GE" facs="#stato_06A">Deutschland (Allemagne)</placeName>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                    <div type="mittente">
                        <ab>
                            <stamp rend="Bold" xml:lang="#GE" type="print" facs="#absender_06A">Absender:</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#expediteur_06A">Expèditeur:</stamp>
                            <address>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_nome1_06A">Vor-und Zuname:</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_nome2_06A">Nom et prénom:</stamp>
                                    <persName ref="#AnP" facs="#mit_nome_06A">Pacini Angiolo</persName>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_localita1_06A">Ort:</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_localita2_06A">Lieu</stamp>
                                </addrLine>
                                <addrLine>
                                    <stamp xml:lang="#GE" type="print" facs="#mit_label_via1_06A">Straße:</stamp>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_via2_06A">Rue</stamp>
                                    <placeName ref="#NU" facs="#localita_06A">Nugola</placeName>
                                </addrLine>
                                <addrLine>
                                    <stamp rend="Bold" xml:lang="#GE" type="print" facs="#mit_label_provincia1_06A">Kreis:</stamp>
                                    <placeName ref="#LI" facs="#mit_provincia_06A">Livorno</placeName>
                                    <stamp xml:lang="#FR" type="print" facs="#mit_label_provincia2_06A">Département</stamp>
                                </addrLine>
                                <addrLine>
                                    <placeName ref="#IT" facs="#mit_stato_06A">Italia</placeName>
                                </addrLine>
                            </address>
                        </ab>
                    </div>
                </div>
                <div type="retro">
                    <div type="intestazione">
                        <ab>
                            <stamp xml:lang="#GE" type="print" facs="#stamp1_06B">Hier abtrennen!</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#stamp2_06B">Détacher le long du pointillé!</stamp>
                            <stamp xml:lang="#GE" type="print" facs="#stamp3_06B">diese Seite is fut die Angehörigen des Kriegsgenfangenen bestimmt. Detulich auf die Zeilen schreiben!</stamp>
                            <stamp xml:lang="#FR" type="print" facs="#stamp4_06B">Ce côté est réservé aux proches parents du prissonier de guerre! N'écrite que sur les lignes et lisiblmente!</stamp>
                        </ab>
                    </div>
                    <div type="messaggio">
                        <lb n="1"/>
                        <opener>
                            <dateline>
                                <placeName ref="#LI" facs="#luogo1_06B">Livorno</placeName>
                                <placeName ref="#NU" facs="#luogo2_06B">Nugola</placeName>
                                <date when="1944-02-08" facs="#data_06B">8.2.944</date>
                            </dateline>
                            <lb n="2"/>
                            <salute facs="#salute_06B">Figlio adorato.</salute>
                        </opener>
                        <ab>
                            <anchor facs="#iniziomessaggio_06B" type="start_message"/>Abbiamo ricevuto tue care
                            <lb facs="#riga2_06B" n="3"/>notizie ci assicuri che tu stai bene. Stai
                            <lb facs="#riga3_06B" n="4"/>tranquillo che anche noi siamo tutti insieme
                            <lb facs="#riga4_06B" n="5"/>desideriamo che tutto finisca co<gap reason="illegible" quantity="2" unit="char"/>tu
                            <lb facs="#riga5_06B" n="6"/>possa ritornare nelle nostre braccia ...
                            <lb facs="#riga6_06B" n="7"/>... tutti a te <persName ref="#AE">mamma</persName> prega
                            <lb facs="#riga7_06B" n="8"/>per te baci da tutti con tante cose
                        </ab>
                        <lb n="9"/>
                        <closer>
                            <signed facs="#signed_06B">tuo <persName ref="#AnP">babbo</persName> e tua mamma</signed>
                        </closer>
                    </div>
                </div>
            </body>
        </text>
